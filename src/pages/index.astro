  </main>
</Layout>

<style lang="scss">
  @use "../styles/mixins";
  .hero {
    &__text {
      padding: 2em 0;
      font-size: 2em;
      &--list {
        display: flex;
        font-size: 1em;
      }
      &--paragraph {
        .words.splitting {
          > span.word{
            background-image: linear-gradient(
            to right,
            var(--accColor) 100%,
            var(--accColor) 100%
          );
          background-repeat: no-repeat;
          background-position: 0 0;
          animation-timeline: scroll(root);
          animation-name: colorWord;
          animation-duration: auto;
          animation-fill-mode: forwards;
          animation-iteration-count: 1;
          animation-timing-function: linear;
          background-size: 0 1.2em;
          }
          
        }
      }
    }
    &__cta {
      display: flex;
      align-items: center;
      justify-content: space-evenly;
      a {
        @include mixins.tag;
        @include mixins.reset-link;
        font-size: 1.2em;
        border: 1px solid;
        &:hover {
          text-decoration: underline;
          box-shadow: 3px 3px 0px 1px;
          animation: move-link 100ms forwards;
        }
      }
    }
  }
</style>
