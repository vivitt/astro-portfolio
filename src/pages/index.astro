<style lang="scss">
  @use "../styles/mixins";
  .hero {
    &__text {
      padding: 2em 0;
      font-size: 2em;
      &--list {
        display: flex;
        font-size: 1em;
      }
      &--paragraph {
        .words.chars.splitting > .word > .char {
          
              background-color: red;
              animation: slide-in 2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
              animation-delay: calc(60ms * var(--char-index));
           
        }
      }
    }
    &__cta {
      display: flex;
      align-items: center;
      justify-content: space-evenly;
      a {
        @include mixins.tag;
        @include mixins.reset-link;
        font-size: 1.2em;
        border: 1px solid;
        &:hover {
          text-decoration: underline;
          box-shadow: 3px 3px 0px 1px;
          animation: move-link 100ms forwards;
        }
      }
    }
  }

  @keyframes slide-in {
    0% {
      transform: translateY(-1em) rotate(-0.5turn) scale(0.5);
    }
    20%,
    100% {
      transform: translateY(0) rotate(0deg) scale(1);
    }
  }
</style>
