    z-index: 2;
  }

  :root::view-transition-old(root) {
    z-index: -1;
    animation: none;
  }

  [data-theme="dark"] {
    --from: 0 100% 0 0;
  }

  [data-theme="light"] {
    --from: 0 0 0 100%;
  } */

