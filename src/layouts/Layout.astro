---
import "@fontsource-variable/work-sans";
import { Image } from "astro:assets";
import mainLogo from "../images/logos/logo-viviyanez.png";
import blogLogo from "../images/logos/blog-viviyanez.png";
import Navigation from "../components/Navigation.astro";
import Social from "../components/Social.astro";
import Hamburger from "../components/Hamburger.astro";
import VivittSwitcher from "../components/ToggleTheme.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href="/"
        >{
          title === "Vivi's Blog" ? (
            <Image src={blogLogo} alt="Vivi's Blog" width="400" />
          ) : (
            <Image src={mainLogo} alt="viviyanez.dev" width="400" />
          )
        }
      </a>
      <div>
        <VivittSwitcher />
        <Navigation />
      </div>
    </header>
    <slot />
    <footer>
      <Social platform="twitter" username="astrodotbuild" />
      <Social platform="github" username="withastro" />
      <Social platform="youtube" username="astrodotbuild" />
    </footer>
    <script>
      document.querySelector(".hamburger").addEventListener("click", () => {
        document.querySelector(".nav-links").classList.toggle("expanded");
      });
    </script>
  </body>
</html>
<style is:global>
  :root {
    --black: #1c1c1c;
    --white: #f1f5f9;
    --lilac: #819af5;
    --foregroundColor: var(--black);
    --backgroundColor: var(--white);
    --foregroundColorDark: var(--white);
    --backgroundColorDark: var(--black);
    --accentColor: (var(--lilac));
    --accentColorDark: (var(--lilac));
  }

  * {
    box-sizing: border-box;
  }

  html {
    background-color: var(--backgroundColor);
    font-family: sans-serif;
    color: var(--foregroundColor);
  }

  html.dark {
    background-color: var(--backgroundColorDark);
    color: var(--foregroundColorDark);
  }

  body {
    margin: 0 1em;

    font-family: "Work Sans Variable", sans-serif;
    padding: 1rem;
    line-height: 1.5;
  }
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  header div {
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: space-between;
  }
  main {
    margin: 1em 3em;
  }
  h1 {
    margin: 1rem 0;
    font-size: 2.5rem;
  }
</style>
