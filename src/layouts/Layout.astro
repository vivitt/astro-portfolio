---
import "@fontsource/inclusive-sans";
import "../styles/global.scss";
import { Picture } from "astro:assets";
import mainLogo from "../images/logos/logo-viviyanez.png";
import blogLogo from "../images/logos/blog-viviyanez.png";
import Navigation from "../components/Navigation.astro";
import Social from "../components/Social.astro";
import { Icon } from "astro-icon/components";
import { ClientRouter } from "astro:transitions";
import { blogPathReg, postsPathReg } from "../utils/pathRegex";
import ToggleTheme from "../components/ToggleTheme.astro";

interface Props {
  title: string;
}

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

console.log(currentPath);
const { title } = Astro.props;

const date = new Date();
let year = date.getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body transition:name="slide">
    <header class="header">
      <div class="header__icons">
        <Social
          platform="github"
          username="vivitt"
          class="header__icons__icon"
        />
        <Social
          platform="linkedin"
          username="in/viviana-yanez"
          class="header__icons__icon"
        />
        <ToggleTheme />
      </div>
      <div class="header__navigation">
        {
          currentPath.match(postsPathReg) || currentPath.match(blogPathReg) ? (
            <a>
              <Picture
                formats={["avif", "webp"]}
                src={blogLogo}
                alt="Vivi's Blog"
              />
            </a>
          ) : (
            <a href="/">
              <Picture
                formats={["avif", "webp"]}
                src={mainLogo}
                alt="viviyanez.dev"
              />
            </a>
          )
        }

        <Navigation />
      </div>
    </header>

    <slot />

    <footer class="footer">
      <div class="footer__links">
        <p>Find me on:</p>

        <div class="footer__links__link">
          <Icon name="linkedin" />
          <a
            href="https://www.linkedin.com/in/viviana-yanez/"
            target="_blank"
            class="footer__links__link__text"
            >LinkedIn
          </a>
        </div>

        <div class="footer__links__link">
          <Icon name="github" />
          <a
            href="https://github.com/vivitt"
            target="_blank"
            class="footer__links__link__text"
            >GitHub
          </a>
        </div>

        <div class="footer__links__link">
          <Icon name="bsky" />
          <a
            href="https://bsky.app/profile/viviyanez.bsky.social"
            target="_blank"
            class="footer__links__link__text"
            >Bluesky
          </a>
        </div>

        <div class="footer__links__link">
          <Icon name="x" />
          <a
            href="https://x.com/yvivi_vi"
            target="_blank"
            class="footer__links__link__text"
            >X
          </a>
        </div>
      </div>
      <div class="footer__text">
        <p>Viviana Yanez {year} | Made with ♥︎</p>
      </div>
    </footer>
  </body>
</html>
<style lang="scss">
  @use "../styles/mixins";

  body {
    .header {
      @include mixins.max-w;
      display: flex;
      flex-direction: column;

      &__icons {
        width: 100%;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        &__toggle {
          z-index: 3;
        }
      }
      &__navigation {
        width: 100%;

        a > picture > img {
          max-width: 100%;
          min-width: 380px;
          height: auto;
        }

        nav {
          width: 100%;
          display: flex;
          flex-flow: row nowrap;
          justify-content: flex-end;
          align-items: center;
        }
      }
    }

    .footer {
      padding: 2em 5em;
      border-top: 1px solid;
      margin-top: 5em;
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: var(--bgColorBase);
      z-index: 1;

      &__links {
        display: flex;
        flex-direction: column;

        & [data-icon] {
          padding-inline-end: 0.3em;
          font-size: 1.2rem;
          color: var(--color);
        }

        &__link {
          display: flex;
          justify-content: start;
          align-items: center;
          color: var(--color);
          cursor: pointer;

          &__text {
            @include mixins.underline-link;
            @include mixins.reset-link;
            background-size: 0 0.1em;
            background-position: 0 100%;
            &:hover,
            &:focus {
              animation: underline-link 200ms forwards;
            }
          }
          &:hover,
          &:focus {
            animation: highlight-link 200ms forwards;
          }
        }
      }
    }
  }
</style>
