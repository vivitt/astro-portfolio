---
const { text, link } = Astro.props;
---

<a href={link}>{text}</a>

<style lang="scss">
  @use "../styles/mixins";

  a {
    @include mixins.tag;
    @include mixins.reset-link;
    font-size: 1.2em;
    border: 1px solid;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    &:hover {
      text-decoration: underline;
      box-shadow: 3px 3px 0px 1px;
      animation: move-link 100ms forwards;
      --toY: -2px;
      --toX: -3px;
    }
  }
</style>
